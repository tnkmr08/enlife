<div class='bg-image-user'>
  <div class='bg-mask'>
    <div class='space'>
      <div class="box">
        <div class="box-inner">
          <h2>EnLife</h2>
          <hr class="border-line" />
          <%= form_with model: @user, url: user_session_path, id: 'current_user', class: 'current_user', local: true do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'input-default', id: "email" %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード(6文字以上の半角英数字)", class: 'input-default', id: "password" %>
            </div>
            <div class="actions">
              <%= f.submit "ログイン", class: "submit" %>
            </div>
            <hr class="border-line" />
            <div class="transition">
              <%= link_to "アカウントをお持ちでない方", new_user_registration_path, class: "signup" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

