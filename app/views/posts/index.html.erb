<%= render 'shared/header' %>

<div class='main-top'>
  <div class='newest-post'> 
    <%= link_to 'restaurant', restaurants_path, class: 'category-name' %>
    <hr class="border-line" />
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant.user.name, user_path(restaurant.user.id) %>
      <%= restaurant.place_name %>
      <div class='image'>
        <%= image_tag restaurant.image, class: 'post-img' %>
      </div>
    <% end %>
  </div> 
</div>   

